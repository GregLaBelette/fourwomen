<div class='container form-container'>
  <h2>Bienvenue sur 4Women</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group mb-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
    </div>

    <div class="field form-group mb-2">
      <%= f.label :password, 'Mot de passe' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group mb-4">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, 'Se souvenir de moi' %>
      </div>
    <% end %>

    <div class="actions">
      <div class='d-flex justify-content-end'>
        <%= f.submit "C'est parti", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
